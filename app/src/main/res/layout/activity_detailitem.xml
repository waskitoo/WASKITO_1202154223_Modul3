<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lblImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/aqua"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/lblJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lblDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:maxHeight="150dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgIsi"
                    android:layout_width="220dp"
                    android:layout_height="210dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/progress" />

                <TextView
                    android:id="@+id/lblStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgIsi"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnIsiKurang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgIsi"
                    android:background="@drawable/ic_minus" />

                <Button
                    android:id="@+id/btnIsiTambah"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgIsi"
                    android:background="@drawable/ic_add" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
